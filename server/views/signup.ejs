<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="css/login.css"/>
        <link href="http://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div id="container" >
                <span class="signupspan">
                    <div class="label">Sign up</div>

                    <div class="input-username-signup">
                        <input id="username" type="text" placeholder="username" name="username">
                        <div class="pnlerroriput" id="pnl1" style="display:none"></div>
                    </div>

                    <% if (signup_username_error && signup_username_error.length > 0) { %>
                        <div class="alert"><%= signup_username_error %></div>
                    <% } %>

                    <div class="input-password-signup">
                        <input class="password1" type="password" name="password" placeholder="password" >
                    </div>
                    <div class="input-password-signup">
                        <input class="password2" type="password" placeholder="repeat the password">
                        <div class="pnlerroriput" id="pnl2" style="display:none"></div>
                    </div>

                    <% if (signup_password_error && signup_password_error.length > 0) { %>
                        <div class="alert"><%= signup_password_error %></div>
                    <% } %>
       
                    <div class="submit-button-signup">
                        <button type="button" id="button">Submit</button>
                    </div>

                    <% if (signup_error && signup_error.length > 0) { %>
                        <div class="alert"><%= signup_error %></div>
                    <% } %>

                    <div class="change"><a href="http://localhost:9014/login">log in</a></div>
                </span>
        </div>
    </body>
    <script src="./js/ejs.js"></script>
    <script src="./framework.js"></script>
    <script src="./js/signup.js"></script>
    <script>signup.init()</script>
</html>

